<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/secondary"
                android:startColor="@color/secondary_2" />
            <stroke android:width="1dp" android:color="@color/secondary" />
            <corners android:radius="@dimen/md_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/secondary_2"
                android:startColor="@color/secondary" />
            <stroke android:width="1dp" android:color="@color/secondary" />
            <corners android:radius="@dimen/md_radius" />
        </shape>
    </item>

</selector>